<h1>Team Detail Page</h1>

<h2>
    <strong>Team Name:</strong>
    <%=team.name %> 
</h2>
<p>
    <strong>Description:</strong>
    <%=team.description  %> 
</p>
<div> 

    <a href="/teams/<%=team.id%>/edit" >&rarr; Edit </a> 
  </div>
<h2>
    <%=team.name %>'s Members 
</h2>
<% team.players.forEach(p=>{%> 
    <p><%=p.name %> (Wins: <%= p.wins%> ) (Losses: <%= p.losses%> )</p>
<%}) %> 

<h2>Actions</h2>
<a href="/teams/<%=team.id%>/edit"  class="btn-small blue lighten-2">
Edit team  </a>
<form  id="delete-form" method="POST" action="/teams/<%=team.id%>?_method=DELETE">
    <input type="submit" class="btn small red" value="Delete Team">
</form>

<script src="/script.js"></script>